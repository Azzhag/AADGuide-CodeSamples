@if (Request.IsAuthenticated)
{
    <ul class="ms-NavBar-items">
        <li class="ms-NavBar-item ms-NavBar-item--right">@Html.ActionLink("Sign out", "SignOut", "Account", routeValues: null, htmlAttributes: new { style = "padding:1em;", @class = "ms-NavBar-link" })</li>
        <li class="ms-NavBar-item ms-NavBar-item--right">@Html.ActionLink(@User.Identity.Name, "Profile", "Account", routeValues: null, htmlAttributes: new { @class = "ms-NavBar-link" })</li>
    </ul>
}
else
{
    <ul class="ms-NavBar-items">
        <li class="ms-NavBar-item ms-NavBar-item--right">@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "ms-NavBar-link" })</li>
        <li class="ms-NavBar-item ms-NavBar-item--right">@Html.ActionLink("Sign up", "SignUp", "Account", routeValues: null, htmlAttributes: new { id = "signUpLink", style = "padding:1em;", @class = "ms-NavBar-link" })</li>
    </ul>
}

